<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.video.dojostreams" name="Dojo Streams" version="0.0.1" provider-name="Dojo">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
	<import addon="script.module.urlresolver"  version="3.0.0"/>
	<import addon="script.module.addon.common"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
		<provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
	<summary lang="en">Dojo Streams </summary>
	<description lang="en">A plugin for playing online lists</description>
	<disclaimer lang="en">The original author neither hosts or stores any content, the original author has no affiliation with content hosts</disclaimer>
	<platform>all</platform>
  </extension>
</addon>

    <addon id="repository.dojo" name="Dojo Streams" version="0.1.0" provider-name="dojo">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="Dojo Streams">
            <info compressed="false">https://raw.githubusercontent.com/dejay313/dojostreams/_repo/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/dejay313/dojostreams/_repo/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/dejay313/dojostreams/_repo/</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>A short summary of this addon</summary>
            <description>The description can be longer. Using [CR] you can create a newline. The use of other markup is not advised.</description>
            <platform>all</platform>
    </extension>
</addon>
</addons>
